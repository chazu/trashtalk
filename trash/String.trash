# String - String manipulation and testing utilities
# Provides class methods for common string operations that enable
# converting raw methods to pure DSL.
#
# Usage:
#   (@ String isEmpty: myVar) ifTrue: [ ... ]
#   (@ String contains: text substring: "error") ifTrue: [ ... ]
#   result := @ String trimSuffix: ".trash" from: filename
#
String subclass: Object
  pragma: primitiveClass

  # ========================================
  # String Tests
  # ========================================

  # Test if string is empty (replaces [[ -z "$str" ]])
  primitiveClassMethod: isEmpty: str [
    [[ -z "$str" ]] && echo "true" || echo "false"
  ]

  # Test if string is not empty (replaces [[ -n "$str" ]])
  primitiveClassMethod: notEmpty: str [
    [[ -n "$str" ]] && echo "true" || echo "false"
  ]

  # Test if string contains substring
  primitiveClassMethod: contains: str substring: sub [
    [[ "$str" == *"$sub"* ]] && echo "true" || echo "false"
  ]

  # Test if string starts with prefix
  primitiveClassMethod: startsWith: str prefix: prefix [
    [[ "$str" == "$prefix"* ]] && echo "true" || echo "false"
  ]

  # Test if string ends with suffix
  primitiveClassMethod: endsWith: str suffix: suffix [
    [[ "$str" == *"$suffix" ]] && echo "true" || echo "false"
  ]

  # Test if two strings are equal
  primitiveClassMethod: equals: a to: b [
    [[ "$a" == "$b" ]] && echo "true" || echo "false"
  ]

  # ========================================
  # String Manipulation
  # ========================================

  # Remove prefix pattern from string (replaces ${str##pattern})
  primitiveClassMethod: trimPrefix: pattern from: str [
    echo "${str##$pattern}"
  ]

  # Remove suffix pattern from string (replaces ${str%%pattern})
  primitiveClassMethod: trimSuffix: pattern from: str [
    echo "${str%%$pattern}"
  ]

  # Remove shortest prefix match (replaces ${str#pattern})
  primitiveClassMethod: trimShortPrefix: pattern from: str [
    echo "${str#$pattern}"
  ]

  # Remove shortest suffix match (replaces ${str%pattern})
  primitiveClassMethod: trimShortSuffix: pattern from: str [
    echo "${str%$pattern}"
  ]

  # Replace first occurrence (replaces ${str/old/new})
  primitiveClassMethod: replace: old with: new in: str [
    echo "${str/$old/$new}"
  ]

  # Replace all occurrences (replaces ${str//old/new})
  primitiveClassMethod: replaceAll: old with: new in: str [
    echo "${str//$old/$new}"
  ]

  # Get substring (replaces ${str:start:length})
  primitiveClassMethod: substring: str from: start length: len [
    echo "${str:$start:$len}"
  ]

  # Get string length
  primitiveClassMethod: length: str [
    echo "${#str}"
  ]

  # Convert to uppercase
  primitiveClassMethod: uppercase: str [
    echo "${str^^}"
  ]

  # Convert to lowercase
  primitiveClassMethod: lowercase: str [
    echo "${str,,}"
  ]

  # ========================================
  # String Splitting
  # ========================================

  # Split string on delimiter, return as newline-separated values
  primitiveClassMethod: split: str on: delim [
    local IFS="$delim"
    local parts
    read -ra parts <<< "$str"
    printf '%s\n' "${parts[@]}"
  ]

  # Get part before delimiter (replaces ${str%%delim*})
  primitiveClassMethod: before: delim in: str [
    echo "${str%%$delim*}"
  ]

  # Get part after delimiter (replaces ${str#*delim})
  primitiveClassMethod: after: delim in: str [
    echo "${str#*$delim}"
  ]

  # ========================================
  # String Building
  # ========================================

  # Concatenate two strings
  primitiveClassMethod: concat: a with: b [
    echo "${a}${b}"
  ]

  # Concatenate three strings
  primitiveClassMethod: concat: a with: b with: c [
    echo "${a}${b}${c}"
  ]

  # Join array elements with delimiter
  primitiveClassMethod: join: delimiter values: values [
    local IFS="$delimiter"
    echo "$values"
  ]

  # Repeat string n times
  primitiveClassMethod: repeat: str times: n [
    local result=""
    local i
    for ((i=0; i<n; i++)); do
      result="${result}${str}"
    done
    echo "$result"
  ]

  # ========================================
  # Whitespace Handling
  # ========================================

  # Trim leading and trailing whitespace (using extglob)
  primitiveClassMethod: trim: str [
    shopt -s extglob
    str="${str##+([[:space:]])}"
    str="${str%%+([[:space:]])}"
    shopt -u extglob
    echo "$str"
  ]

  # Trim leading whitespace (using extglob)
  primitiveClassMethod: trimLeft: str [
    shopt -s extglob
    echo "${str##+([[:space:]])}"
  ]

  # Trim trailing whitespace (using extglob)
  primitiveClassMethod: trimRight: str [
    shopt -s extglob
    echo "${str%%+([[:space:]])}"
  ]

