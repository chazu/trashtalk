# TestTestCase - Tests for the TestCase framework itself
# Run with: @ TestTestCase runAll
TestTestCase subclass: TestCase

  # ==========================================
  # Equality Tests
  # ==========================================

  method: testAssertEquals [
    pragma: primitive
    @ "$_RECEIVER" assert_equals "hello" "hello"
    @ "$_RECEIVER" assert_equals 42 42
    @ "$_RECEIVER" assert_equals "" ""
  ]

  method: testAssertNotEquals [
    pragma: primitive
    @ "$_RECEIVER" assert_not_equals "hello" "world"
    @ "$_RECEIVER" assert_not_equals 1 2
  ]

  # ==========================================
  # Boolean Tests
  # ==========================================

  method: testAssertTrue [
    pragma: primitive
    @ "$_RECEIVER" assert_true "true"
    @ "$_RECEIVER" assert_true "1"
  ]

  method: testAssertFalse [
    pragma: primitive
    @ "$_RECEIVER" assert_false "false"
    @ "$_RECEIVER" assert_false "0"
    @ "$_RECEIVER" assert_false ""
  ]

  # ==========================================
  # Nil Tests
  # ==========================================

  method: testAssertNil [
    pragma: primitive
    @ "$_RECEIVER" assert_nil ""
    @ "$_RECEIVER" assert_nil "null"
  ]

  method: testAssertNotNil [
    pragma: primitive
    @ "$_RECEIVER" assert_not_nil "something"
    @ "$_RECEIVER" assert_not_nil "0"
  ]

  # ==========================================
  # String Tests
  # ==========================================

  method: testAssertContains [
    pragma: primitive
    @ "$_RECEIVER" assert_contains "hello world" "world"
    @ "$_RECEIVER" assert_contains "foobar" "oba"
  ]

  method: testAssertMatches [
    pragma: primitive
    @ "$_RECEIVER" assert_matches "hello123" "^hello[0-9]+"
    @ "$_RECEIVER" assert_matches "test@example.com" "@"
  ]

  # ==========================================
  # Numeric Tests
  # ==========================================

  method: testAssertGreaterThan [
    pragma: primitive
    @ "$_RECEIVER" assert_greater_than 10 5
    @ "$_RECEIVER" assert_greater_than 100 50
  ]

  method: testAssertLessThan [
    pragma: primitive
    @ "$_RECEIVER" assert_less_than 5 10
    @ "$_RECEIVER" assert_less_than 1 100
  ]

  # ==========================================
  # Skip/Pending Tests
  # ==========================================

  method: testSkip [
    pragma: primitive
    @ "$_RECEIVER" skip: "Demonstrating skip functionality"
  ]

  method: testPending [
    pragma: primitive
    @ "$_RECEIVER" pending: "Feature not yet implemented"
  ]
