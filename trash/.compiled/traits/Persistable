Persistable trait

  # Save this object to the Store (idempotent - creates or updates)
  rawMethod: save [
    _env_persist "$_RECEIVER"
  ]

  # Delete this object from the Store (keeps it in memory)
  rawMethod: unpersist [
    db_delete "$_RECEIVER" 2>/dev/null
