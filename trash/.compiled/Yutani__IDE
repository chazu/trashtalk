__Yutani__IDE__appendOutput_() {
  local text="$1"
  local currentHistory
  currentHistory="$(_ivar history)${text}"
  _ivar_set history "$currentHistory"
  @ "$(_ivar outputView)" setText: "$currentHistory"
}
